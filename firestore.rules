rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // 光回線プロバイダー情報は読み取り専用
    match /providers/{document=**} {
      allow read: if true;
      allow write: if false; // 管理者のみ書き込み可能
    }
    
    // アナリティクスデータは読み取り専用
    match /analytics/{document=**} {
      allow read: if true;
      allow write: if false; // システムのみ書き込み可能
    }
    
    // その他のドキュメントはデフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
